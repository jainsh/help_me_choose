%h1.text-center Usage Profile
%p.text-center Enter in number of visits in past year for each category...

.row
  .col-md-6.col-md-offset-3

    = simple_form_for @usage_profile, defaults: { input_html: { class: "form-horizontal" } } do |f|
      .form-group
        = f.input :gender, :input_html => { :class => "form-control" }
      .form-group
        = f.input :date_of_birth, :input_html => { :class => "form-control" }
      .form-group
        = f.input :zipcode, :input_html => { :class => "form-control" }
      = f.simple_fields_for :service_usages do |su|
        .form-group
          = su.label su.object.service_cost.name
          = su.input_field :usage_count
          = su.hidden_field :service_cost_id
      = f.submit "Next" , :class => "btn btn-success pull-right"
